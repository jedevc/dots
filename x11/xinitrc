# get environment variables
source ~/.xprofile

# input settings
setxkbmap gb
xinput set-prop 11 'libinput Accel Speed' 0.5
xinput set-prop 11 'libinput Tapping Enabled' 1
xinput set-prop 12 'libinput Accel Speed' 0.6
xset r rate 300 30

# screen
xset dpms 0 0 180

# NetworkManager
nm-applet &

# Dropbox
dropbox &

# wallpaper
~/.fehbg &

# autolock
xss-lock -- i3lock -n -i ~/.wallpaper.png &

# launch desktop
compton -b
exec i3
